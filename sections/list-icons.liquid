{%- render 'section-spacing-collapsing' -%}

<style>
  #shopify-section-{{ section.id }} {
      background-color: {{ section.settings.background }};
  }
  .shopify-section--logo-icon .section-stack{
    
  }
  .shopify-section--logo-icon .prose .h2{
    color: #004228;
    font-size: 25px;
    font-weight: 700;
    text-transform: uppercase;
    line-height: 25px;
    text-align: center;
  }

  .list-icon-item{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .list-icon-item-content{
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .list-icon-item-content h3{
    color: #004228;
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.18px;
    line-height: 120%;
    text-align: center;
  }
  .list-icon-item-content p{
    color: #505050;
    font-size: 14px;
    font-weight: 500;
    line-height: 20px;
  }
  @media screen and (min-width: 770px) {
    .shopify-section--logo-icon .prose .h2{
      font-size: 33px; 
      line-height: 33px;
    }
    .list-icon{
      display: flex;
      flex-direction: column;
      gap: 30px;
      align-items: center;
    }
    .list-icon-item{
      flex-direction: row;
      gap: 20px;
    }
    .list-icon-item-content h3{
      font-size: 20px;
      text-align: left;
    }
    .list-icon-item-content p{
      font-size: 16px;
      line-height: 24px;
    }
  }
  @media screen and (min-width: 1150px) {
    .shopify-section--logo-icon .prose .h2{
      font-size: 44px; 
      line-height: 44px;
      text-align: left;
    }
    .shopify-section--logo-icon .section-stack{
      grid-template-columns: 1fr 1fr;
    }
    .shopify-section--logo-icon .section-stack .prose{
      display: flex;
      align-items: center;
    }
    .list-icon-item-content h3{
      font-size: 25px;
    }
    .list-icon-item-content p{
      font-size: 16px;
      line-height: 24px;
    }
  }
  @media screen and (min-width: 1400px) {
    .shopify-section--logo-icon .prose .h2{
      font-size: 55px; 
      line-height: 55px;
      text-align: left;
    }
    .shopify-section--logo-icon .section-stack{
    }
    .list-icon-item-content h3{
      font-size: 30px;
    }
    .list-icon-item-content p{
      font-size: 20px;
      line-height: 26px;
    }
  }
</style>

<div {% render 'section-properties', class: 'shopify-section--logo-icon' %}>
    <div class="section-stack">
        <div class="prose {% if section.settings.text_alignment == 'center' %}text-center{% endif %}">
            {%- if section.settings.title != blank -%}
                <h2 class="h2">
                    {%- render 'styled-text', content: section.settings.title, text_color: section.settings.heading_color -%}
                </h2>
            {%- endif -%}

        </div>
        <div class="list-icon">
            {%- for block in section.blocks -%}
                <div class="list-icon-item">
                    {%- if block.settings.logo != blank -%}
                      {{-  block.settings.logo| image_url: width:  block.settings.logo.width | image_tag: loading: 'lazy', sizes: '(max-width: 740px) 100vw, 650px', widths: '200,300,400,600,800,1000,1200,1400,1600', class: 'list-icon-item-image' -}}
                    {%- else -%}
                        {{- 'image' | placeholder_svg_tag: 'logo-list__image' -}}
                    {%- endif -%}
                    <div class="list-icon-item-content">
                        {%- if block.settings.title != blank -%}
                            <h3>
                                {{  block.settings.title }}
                            </h3>
                        {%- endif -%}
                        {%- if block.settings.content != blank -%}
                                {{  block.settings.content }}
                        {%- endif -%}
                    </div>
                </div>
            {%- endfor -%}
        </div>

    </div>
</div>
  
  {% schema %}
  {
    "name": "List with Icons",
    "class": "shopify-section--logo-icon",
    "tag": "section",
    "max_blocks": 3,
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Logo list"
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading color"
      }
    ],
    "blocks": [
        {
        "name": "Item",
        "type": "item",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "Title"
            },
            {
                "type": "richtext",
                "id": "content",
                "label": "Content",
                "default": "<p>Write content to help your customers to better understand your products or policies.</p>"
            },
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo",
                "info": "120 x 120px .png recommended"
            }
        ]
        }
    ],
    "presets": [
      {
        "name": "List with Icons",
        "blocks": [
          {
            "type": "item"
          },
          {
            "type": "item"
          },
          {
            "type": "item"
          }
        ]
      }
    ]
  }
  {% endschema %}